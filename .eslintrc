{
  "extends": ["standard", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "never"],
    "no-trailing-spaces": 2,
    "space-before-function-paren": [2, "never"],
    "eqeqeq": [2, "allow-null"],
    "no-console": 0,
    "no-cond-assign": 0,
    "no-extra-boolean-cast": 0,
    "no-unused-vars": 0,
    "no-new-func": 0
  }
}
